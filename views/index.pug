html(lang="es").h-100
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Hospital Horizon
    link(rel="stylesheet", href="/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body.d-flex.flex-column.h-100
    include Shared/Header.pug 
    main.flex-grow-1.d-flex.align-items-center.justify-content-center.bg-dark
      .container
        .row.justify-content-center
          .col-md-6.col-lg-5.col-xl-4
            .card.shadow-lg.border-secondary(data-bs-theme="dark")
              .card-body.p-4.p-md-5.bg-dark.text-light
                .text-center.mb-4
                  i.bi.bi-hospital.fs-1.text-primary
                  h3.fw-bold.mt-2 Hospital Horizon
                  p.text-white-50 Inicia sesión para continuar

                form#loginForm(novalidate)
                  //- Div para mostrar errores generales del login (ej. "Credenciales incorrectas")
                  #loginError.alert.alert-danger.d-none

                  .form-floating.mb-3
                    input#emailInput.form-control(type="email" name="email" placeholder="nombre@ejemplo.com" required)
                    label(for="emailInput") Correo Electrónico
                  .form-floating.mb-4
                    input#passwordInput.form-control(type="password" name="password" placeholder="Contraseña" required)
                    label(for="passwordInput") Contraseña
                  .d-grid
                    button.btn.btn-primary.btn-lg(type="submit") Iniciar Sesión





    script(src="/bootstrap/js/bootstrap.bundle.min.js")
    script(src="/js/main.js")