header.navbar.navbar-dark.sticky-top.bg-dark.shadow.p-2
  // Contenedor principal para alinear elementos a la izquierda y derecha
  .container-fluid.d-flex.align-items-center
    // --- Elementos de la Izquierda ---
    if usuarioAutenticado
      // Botón para mostrar/ocultar el menú lateral
      button#sidebarToggle.navbar-toggler.p-2.border-0(type="button" aria-label="Toggle navigation")
        i.bi.bi-list.fs-4
    // Logo/Nombre de la aplicación
    a.navbar-brand.ps-2(href="/") Hospital Horizon

    // --- Elementos de la Derecha (si el usuario está autenticado) ---
    if usuarioAutenticado
      // El 'ms-auto' empuja este div y su contenido a la derecha
      .d-flex.align-items-center.ms-auto
        // Nombre del usuario (visible en pantallas grandes)
        span.navbar-text.me-3.d-none.d-lg-inline.text-white-50= `${usuarioAutenticado.nombre} ${usuarioAutenticado.apellido}`
        // Dropdown de perfil
        .dropdown
          a.nav-link.dropdown-toggle.text-white(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false")
            i.bi.bi-person-circle.fs-4
          ul.dropdown-menu.dropdown-menu-end.dropdown-menu-dark
            li: a.dropdown-item(href=`#`): i.bi.bi-person-gear.me-2  Editar Perfil
            li: hr.dropdown-divider
            li: a#logoutButton.dropdown-item(href="#"): i.bi.bi-box-arrow-right.me-2  Cerrar Sesión