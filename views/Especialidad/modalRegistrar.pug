//- Modal para registrar una nueva especialidad
#modalRegistrarEspecialidad.modal.fade(tabindex="-1" aria-labelledby="modalRegistrarEspecialidadLabel" aria-hidden="true")
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5#modalRegistrarEspecialidadLabel.modal-title Registrar Nueva Especialidad
        button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")

      //- El formulario se envía a través de JS, por lo que no necesita action ni method aquí.
      form#formRegistrarEspecialidad(autocomplete="off" novalidate)
        .modal-body
          //- Contenedor para mostrar errores generales del formulario
          #error-container-especialidad.alert.alert-danger.d-none(role="alert")

          .mb-3
            label.form-label(for="nombre_especialidad") Nombre de la Especialidad
            input.form-control(type="text" id="nombre_especialidad" name="nombre" required minlength="3")
            //- Contenedor para el mensaje de validación específico de este campo
            .invalid-feedback

        .modal-footer
          button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cerrar
          button.btn.btn-primary(type="submit")
            i.bi.bi-save-fill.me-2
            | Guardar
Section scripts
  script(src="/js/especialidad/modalRegistrar.js" type="module")
